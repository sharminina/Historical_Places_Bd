<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="historical.com.example.ahmed.historicalplacesbd.chittadiv_two">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#f6f68c"
        android:layout_marginTop="10dp"
        android:text="Historical Places of Chittagong Division"
        android:textSize="25sp"/>

    <ImageButton
        android:id="@+id/bajra"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/bazra"/>
    <ImageButton
        android:id="@+id/gandh"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/gandhi"/>
    <ImageButton
        android:id="@+id/lalmai"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/lalmoina"/>
    <ImageButton
        android:id="@+id/gotomain"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/maintogo"/>
</LinearLayout>
</ScrollView>

