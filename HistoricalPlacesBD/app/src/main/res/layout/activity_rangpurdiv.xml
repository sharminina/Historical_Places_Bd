<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="historical.com.example.ahmed.historicalplacesbd.Rangpurdiv">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Historical Places of Rangpur Division"
        android:textSize="30sp"
        android:textColor="#f6f68c"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/door"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/baraduar"/>
    <ImageButton
        android:id="@+id/bb"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bibi"/>

    <ImageButton

        android:id="@+id/tajh"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tajhat"/>
    <ImageButton
        android:id="@+id/kanta"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/kante"/>



    <ImageButton
        android:id="@+id/noya"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/naya"/>
    <ImageButton
        android:id="@+id/gotomain11"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/maintogo"/>






</LinearLayout>
</ScrollView>