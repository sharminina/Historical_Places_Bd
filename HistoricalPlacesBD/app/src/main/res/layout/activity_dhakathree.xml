<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back">
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="historical.com.example.ahmed.historicalplacesbd.dhakathree">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#f6f68c"
        android:layout_marginTop="10dp"
        android:text="Historical Places of Dhaka Division"
        android:textSize="28sp"/>
    <ImageButton
        android:id="@+id/uddan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/uddan"/>

    <ImageButton
        android:id="@+id/rayer"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rayerbazar"/>

    <ImageButton
        android:id="@+id/budhijibi"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shahid_budhi"/>
    <ImageButton
        android:id="@+id/jasimuddin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/jasim"/>



    <ImageButton
        android:id="@+id/sat"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/seven"/>

    <ImageButton
        android:id="@+id/dighirpar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/deighirpar"/>
    <ImageButton
        android:id="@+id/nextpage_four"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/nextbtn"/>
    <ImageButton
        android:id="@+id/gotomain6"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/maintogo"/>
</LinearLayout>
</ScrollView>