<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/new_back"
     >
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="historical.com.example.ahmed.historicalplacesbd.Dhakadiv"

    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Places in Dhaka Division"
        android:textSize="25sp"
        android:textColor="#f6f68c"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/np"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/parla"/>
    <ImageButton
        android:id="@+id/lalba"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/lalbagh"/>
    <ImageButton
        android:id="@+id/arm"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/armenium"/>
    <ImageButton
        android:id="@+id/carzn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/carzon"
        />
    <ImageButton
        android:id="@+id/shahid"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shahid"/>
    <ImageButton
        android:id="@+id/martyr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/martyr"/>

    <ImageButton
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"

        android:background="@drawable/nextbtn"/>
    <ImageButton
        android:id="@+id/gotomain2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"

        android:background="@drawable/maintogo"/>




</LinearLayout>
    </ScrollView>
