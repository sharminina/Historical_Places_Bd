<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/new_back"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    tools:context="historical.com.example.ahmed.historicalplacesbd.rajshahidiv_two">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Historical Places of Rajshahi Division"
        android:textSize="30sp"
        android:textColor="#f6f68c"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/bagha"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bagah"/>



    <ImageButton
        android:id="@+id/behula"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/behul"/>
    <ImageButton
        android:id="@+id/chat_m"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/chatm"/>

    <ImageButton
        android:id="@+id/ellinor"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/elli"/>






    <ImageButton
        android:id="@+id/rajtwo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/nextbtn"/>
    <ImageButton
        android:id="@+id/gotomain10"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/maintogo"/>



</LinearLayout>
</ScrollView>