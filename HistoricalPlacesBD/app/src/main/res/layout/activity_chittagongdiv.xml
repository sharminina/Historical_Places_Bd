<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="historical.com.example.ahmed.historicalplacesbd.Chittagongdiv">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="#f6f68c"
    android:layout_marginTop="10dp"
    android:text="Historical Places of Chittagong Division"
    android:textSize="25sp"/>
    <ImageButton
        android:id="@+id/atia"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/atia_m"/>
    <ImageButton
        android:id="@+id/suja"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/sujmos"/>
    <ImageButton
        android:id="@+id/ethon"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ethono"/>
    <ImageButton
        android:id="@+id/second"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/cemetry"/>
    <ImageButton
        android:id="@+id/temple_adi"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/adi"/>
    <ImageButton
        android:id="@+id/bijuy"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/bijoy"/>




    <ImageButton
        android:id="@+id/chtnxtone"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/nextbtn"/>
    <ImageButton
        android:id="@+id/gotomain1"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
      android:background="@drawable/maintogo"/>


</LinearLayout>
</ScrollView>
